<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/minions_btn_scan">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_left_eye"
        android:layout_width="@dimen/dimen20"
        android:layout_height="@dimen/dimen20"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/dimen52"
        android:layout_marginTop="@dimen/dimen65"
        android:src="@drawable/nes" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right_eye"
        android:layout_width="@dimen/dimen20"
        android:layout_height="@dimen/dimen20"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dimen65"
        android:layout_marginEnd="@dimen/dimen52"
        android:src="@drawable/nes" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minions_btn_scan_see" />

</FrameLayout>